{
  "manifest_version": 3,
  "name": "Notion CodeBlock Language Switcher",
  "version": "0.2.0",
  "description": "단축키로 노션 코드 블록의 언어를 빠르게 변경합니다.",
  "permissions": ["tabs"],
  "host_permissions": [
    "https://www.notion.so/*",
    "https://*.notion.site/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-language-dropdown": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Open the language dropdown of the current Notion code block"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*",
        "https://*.notion.site/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
  }
}
