{
  "manifest_version": 3,
  "name": "Notion CodeBlock Language Switcher",
  "version": "0.1.0",
  "description": "단축키로 노션 코드 블록의 언어를 빠르게 변경합니다.",
  "permissions": [],
  "host_permissions": [
    "https://www.notion.so/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
  }
}